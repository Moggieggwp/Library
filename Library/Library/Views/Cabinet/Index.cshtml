<div class="tabbable tabs-left" ng-init="">
    <!--<button data-bind="click: GetUser">Get User</button>-->
    <ul class="nav nav-tabs">
        <li class="active"><a href="#orders" data-toggle="tab">Manage Orders</a></li>
        <li><a href="#profile" data-toggle="tab">Profile info</a></li>
        <li><a href="#account" data-toggle="tab">Account</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="orders">
        </div>
        <div class="tab-pane" id="profile">
            <div class="container">
                <h3 style="color:white">Edit your personal information</h3>
                <div class="row form-group">
                    <label class="col-md-3 control-label" style="color:white">First name:</label>
                    <div class="col-md-3">
                        <input class="form-control" type="text" placeholder="Ivan" data-bind="value: firstName" required />
                    </div>
                </div>
                <div class="row form-group">
                    <label class="col-md-3 control-label" style="color:white">Last name:</label>
                    <div class="col-md-3">
                        <input class="form-control" type="text" placeholder="Ivanov" data-bind="value: lastName" />
                    </div>
                </div>
                <div class="row form-group">
                    <label class="col-md-3 control-label" style="color:white">Contact Phone:</label>
                    <div class="col-md-3">
                        <input class="form-control" type="text" placeholder="e.g. 1-202-505-5050" data-bind="value: contactPhone" />
                    </div>
                </div>
                <div class="row form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-3">
                        <button class="btn btn-primary" data-bind="click: changeData">
                            <i class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></i>
                            Save changes
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="account">
            <div class="container">
                <h3 style="color:white">Edit account data</h3>
                <div class="row form-group">
                    <label class="col-md-3 control-label" style="color:white">Your email: </label>
                    <div class="col-md-4">
                        <input class="emailInput form-control" data-bind="value:email" readonly="readonly" />
                    </div>
                </div>

                <div class="row form-group">
                    <label class="col-md-3 control-label" style="color:white">Old password:</label>
                    <div class="col-md-4">
                        <input class="form-control" type="password" data-bind="value: oldPassword" />
                    </div>
                </div>
                <div class="row form-group">
                    <label class="col-md-3 control-label" style="color:white">New password:</label>
                    <div class="col-md-4">
                        <input class="form-control" type="password" data-bind="value: newPassword" />
                    </div>
                </div>
                <div class="row form-group">
                    <label class="col-md-3 control-label" style="color:white">Confirm new password:</label>
                    <div class="col-md-4">
                        <input class="form-control" type="password" data-bind="value: newPasswordConfirm" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-offset-3 col-md-1">
                        <button class="btn btn-default" data-bind="click: changePassword">
                            Change Password
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>