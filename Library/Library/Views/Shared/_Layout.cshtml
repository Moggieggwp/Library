<!DOCTYPE html>
<html ng-app="Library">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<body>
    <div class="navbar navbar-inverse navbar-fixed-top semiopacity">
        <div class="container">
            <div class="navbar-header">
                <a href="@Url.Action("Index", "Home")" class="navbar-brand"><i class="glyphicon glyphicon-book">&nbsp;</i>Home</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-left"></ul>
                @if (!User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item nav-link">
                            <a href="@Url.Action("Register", "Account")">
                                <i class="glyphicon glyphicon-user">&nbsp;</i> Sign up
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item nav-link" href="@Url.Action("Login", "Account")">
                                <i class="glyphicon glyphicon-log-in">&nbsp;</i>Sign In
                            </a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item nav-link">
                            <a href="@Url.Action("Index", "Cabinet")">
                                <i class="glyphicon glyphicon-info-sign">&nbsp;</i> My Cabinet
                            </a>
                        </li>
                        <li class="nav-item nav-link">
                            <a href="@Url.Action("SignOut", "Account")">
                                <i class="glyphicon glyphicon-log-out">&nbsp;</i> Sign Out
                            </a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <hr />
            <p>&copy; @DateTime.Now.Year –  ASP.NET application by Dmitry Hrihoryev</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Library")
    @Scripts.Render("~/bundles/scripts")

    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
</body>
</html>
